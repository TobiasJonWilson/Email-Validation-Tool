{
  "name": "tobiasjonwilson/email-validation-tool",
  "description": "Forked from daveearley/Email-Validation-Tool. An easy to use, accurate-ish & extensible email validation library for PHP 8.3+. Original work by Dave Earley - check out the original repository at https://github.com/daveearley/PHP-Email-Validation-Tool",
  "type": "library",
  "keywords": [
    "email validation",
    "email",
    "validate email",
    "email verification",
    "disposable email check"
  ],
  "require": {
    "php": ">=8.3",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.93.0",
    "mockery/mockery": "^1.6.12",
    "phpunit/phpunit": "^9.6.34"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "EmailValidation\\": "src/",
      "EmailValidation\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Dave Earley",
      "email": "dave@earley.email",
      "role": "Original Author"
    },
    {
      "name": "Tobias Wilson",
      "role": "Maintainer"
    }
  ],
  "scripts": {
    "update-data-files":  [
      "(cd scripts && ./update-disposable-email-providers.php)",
      "(cd scripts && ./update-top-level-domains.php)"
    ],
    "post-install-cmd": "@update-data-files",
    "post-update-cmd": "@update-data-files"
  }
}
